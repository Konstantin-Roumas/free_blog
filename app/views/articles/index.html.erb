<div class = "bg-indigo-200 flex justify-center">
  <div class = "text-2xl">Articles</div>
</div>
 <div class = "text-2xl"><%= link_to "New Article", new_article_path%></div>
<div id="articles" class = "flex justify-center flex-wrap  flex-row">
  <% @articles.each do |article| %>
  <div class = "m-10 p-2 text-xl bg-indigo-100 border-4 border-indigo-500 rounded-xl flex-col">
    <div class = "font-bold">Title:</div>
    <div> <%= article.title%></div>
    <div class = "font-bold">Content:</div>
    <div> <%=article.body[0...50]%>...</div>
    <div class = "font-bold">Tags:</div>
    <div> <%= article.tags%></div>
    <%= link_to "Show this article", article %>
  </div>
    <%end%>
</div>

